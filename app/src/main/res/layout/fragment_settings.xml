<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnected"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

        <!-- Reconnect Button -->
        <Button
            android:id="@+id/reconnectButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Reconnect"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />

        <!-- Speed Label -->
        <TextView
            android:id="@+id/speedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speech Speed: 1.0x"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black" />

        <!-- TTS Speed SeekBar -->
        <SeekBar
            android:id="@+id/speedSeekBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="20"
            android:progress="10"
            android:thumbTint="@android:color/holo_blue_dark"
            android:progressDrawable="@drawable/custom_seekbar_progress"
            android:progressTint="@android:color/holo_blue_light"
            android:splitTrack="false"
            android:contentDescription="speech speed"/>

        <!-- FONT SIZE -->
        <TextView
            android:id="@+id/fontSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font Size: 24sp"
            android:textSize="26sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/fontSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="36"
            android:progress="24"
            android:thumbTint="@android:color/holo_green_dark"
            android:progressDrawable="@drawable/custom_seekbar_progress"
            android:progressTint="@android:color/holo_green_light"
            android:splitTrack="false"
            android:contentDescription="font size"/>


        <!-- TEXT COLOR -->
        <Button
            android:id="@+id/textColorButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Change Text Color"
            android:textSize="26sp"
            android:layout_marginTop="40dp" />

        <!-- BUTTON COLORS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Button Colors:"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonColor1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Change Button 1 Color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonColor2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Change Button 2 Color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonColor3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Change Button 3 Color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonColor4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Change Button 4 Color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/resetDefaultsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset to Defaults"
            android:textSize="26sp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
